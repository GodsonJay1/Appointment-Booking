{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist",
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "noEmit": false,      
    "incremental": true
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "frontend"]
}

